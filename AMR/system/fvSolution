// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          1e-06;
        smoother        GaussSeidel;
        preconditioner  DIC;
        nPreSweeps      0;
        nPostSweeps     2;
        cacheAgglomeration on;
        agglomerator    faceAreaPair;
        nCellsInCoarsestLevel 10;
        mergeLevels     1;
    }
    pcorrFinal
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-05;
        relTol          0;
    }

    "(U|k|epsilon|UFinal|pFinal|kFinal|omegaFinal)"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-06;//1e-05
        relTol          1e-06;//0.1
    }
    
       omega
    {
        solver          smoothSolver;
    smoother        GaussSeidel;    // ‚Üê Changed from DIC
    preconditioner  DIC;

    tolerance       1e-05;
    relTol          0.1;
    }

}

PIMPLE
{
